
@{
    ViewBag.Title = "TipoDocumentosCiudadano";
    Layout = "~/Views/Digitador/_LayoutDigitador.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>DriveEase-Administardor</title>
    <link href="~/Theme/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/Theme/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <link href="~/Theme/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>
<body>
    <div class="form-group row">
        <div class="col-sm-8">
            <label>Id:</label>
            <input type="text" class="form-control form-control-user" id="IdDocCiu" readonly>
        </div>
        <div class="col-sm-3" id="addBotton">
            <br />
            <a class="btn btn-primary btn-user btn-block" onclick="addDocCiu(2)">
                Agregar
            </a>
        </div>
        <div class="col-sm-1" id="addBotton">
            <br />
            <a onclick="closeInput()" aria-label="Close">&#10006;</a>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            <label>Ciudadano:</label>
            <input type="text" class="form-control form-control-user" id="listCiudadano" readonly>
        </div>
        <div class="col-sm-4 mb-3 mb-sm-0">
            <label>Documento:</label>
            <select id="listDocumentos" class="form-control form-control-user"></select>
        </div>
        <div class="col-sm-4">
            <label>Tipo Solicitud:</label>
            <select name="genero" id="esRenovacion" class="form-control form-control-user" read>
                <option value=0>Primera vez</option>
                <option value=1>Renovación</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <label>Exámen médico:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon"><i class="fas fa-file-upload"></i></span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="medicFile" aria-describedby="inputGroupFileAddon">
                    <label class="custom-file-label" for="inputFile" id="inputmedicFile">Seleccionar imágen</label>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <label>Exámen psicométrico:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon"><i class="fas fa-file-upload"></i></span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="psicoFile" aria-describedby="inputGroupFileAddon">
                    <label class="custom-file-label" for="inputFile" id="inputpsicoFile">Seleccionar imágen</label>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <label>Exámen de la vista:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon"><i class="fas fa-file-upload"></i></span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="vistaFile" aria-describedby="inputGroupFileAddon">
                    <label class="custom-file-label" for="inputFile" id="inputvistaFile">Seleccionar imágen</label>
                </div>
            </div>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">
            <label>Comprobante de pago:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon"><i class="fas fa-file-upload"></i></span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="depositoFile" aria-describedby="inputGroupFileAddon">
                    <label class="custom-file-label" for="inputFile" id="inputdepositoFile">Seleccionar imágen</label>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
                <h6 class="m-0 font-weight-bold text-primary">Listado de documentos por ciudadano</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Documento</th>
                                <th>Ciudadano</th>
                                <th>Examen teórico</th>
                                <th>Examen práctico</th>
                                <th>Estado</th>
                                <th>Fecha emisión</th>
                                <th>Fecha vencimiento</th>
                                <th>Tipo</th>
                                <th>Fecha Cita</th>
                                <th>Exa.Medico</th>
                                <th>Exa.Vista</th>
                                <th>Exa.Psico</th>
                                <th>Depósito</th>
                                <th>Eliminar Registro</th>
                            </tr>
                        </thead>
                        <tbody id="detDocxCiu"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/App/TipoDocumentosCiudadanos.js" asp-append-version="true"></script>
    <script type="text/javascript">
        getDoCiu();
        closeInputCiudad();
    </script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Theme/vendor/jquery/jquery.min.js"></script>
    <script src="~/Theme/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Theme/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Theme/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Theme/vendor/datatables/dataTables.bootstrap4.min.js"></script>
</body>
</html>

