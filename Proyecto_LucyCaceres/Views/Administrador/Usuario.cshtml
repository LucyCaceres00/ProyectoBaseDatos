
@{
    ViewBag.Title = "Usuario";
    Layout = "~/Views/Administrador/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>DriveEase-Administardor</title>
    <link href="~/Theme/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/Theme/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Theme/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>
<body>
    <div class="form-group row">
        <div class="col-sm-8 mb-3 mb-sm-0">
            <label>DNI:</label>
            <input type="text" class="form-control form-control-user" id="dniNewUser">
        </div>
        <div class="col-sm-3" id="addBotton">
            <br />
            <a class="btn btn-primary btn-user btn-block" onclick="registrarNuevoUsuario()">
                Agregar
            </a>
        </div>
        <div class="col-sm-3" id="editBotton">
            <br />
            <a class="btn btn-success btn-user btn-block" onclick="updateUsuario()">
                Editar
            </a>
        </div>
        <div class="col-sm-1" id="addBotton">
            <br />
            <a onclick="closeInput()" aria-label="Close">&#10006;</a>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <label>Nombres:</label>
            <input type="text" class="form-control form-control-user" id="nameNewUser"
                   placeholder="Nombres">
        </div>
        <div class="col-sm-6">
            <label>Apellidos:</label>
            <input type="text" class="form-control form-control-user" id="lastNewUser"
                   placeholder="Apellidos">
        </div>
    </div>
    <div class="form-group">
        <label>Correo electrónico:</label>
        <input type="email" class="form-control form-control-user" id="emailNewUser"
               placeholder="Correo electrónico">
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <label>Genero:</label>
            <input type="text" class="form-control form-control-user" maxlength="1"
                   id="genderNewUser" placeholder="Genero: F ó M">
        </div>
        <div class="col-sm-6">
            <label>Celular:</label>
            <input type="text" class="form-control form-control-user" maxlength="9"
                   id="celNewUser" placeholder="Número celular: ####-####">
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Earnings (Monthly)
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">$40,000</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <label>Contraseña:</label>
            <input type="text" class="form-control form-control-user"
                   id="passNewUser">
        </div>
        <div class="col-sm-6">
            <label>Rol:</label>
            <select name="roles" id="rolNewUser" class="form-control form-control-user">
                <option value=2>Ciudadano</option>
                <option value=3>Agente de policia</option>
                <option value=1>Administrador</option>
            </select>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
                <h6 class="m-0 font-weight-bold text-primary">Listado de usuarios</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>DNI</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Correo electrónico</th>
                                <th>Genero</th>
                                <th>Celular</th>
                                <th>Contraseña</th>
                                <th>Rol Id</th>
                                <th>Editar Registro</th>
                                <th>Eliminar Registro</th>
                            </tr>
                        </thead>
                        <tbody id="DetUsuario"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/App/Usuarios.js" asp-append-version="true"></script>
    <script type="text/javascript">
        getUsuarios();
        closeInput()
    </script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Theme/vendor/jquery/jquery.min.js"></script>
    <script src="~/Theme/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Theme/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Theme/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Theme/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Theme/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Scripts/App/Usuarios.js" asp-append-version="true"></script>
</body>
</html>

